<div id="container">

<br/><h1>Sign Up</h1>
<div id="box">

	<div id="boxContent">

          
		
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true}) do |f| %>
			<div id="code">
				<%= f.label :beta_code, 'Top Secret Code:', :class=>'inline betaLabelTextField' %>
				<%= f.text_field :beta_code, :class=>'betaTextField' %>
				<%#= errorImage(@user, :beta_code)%>
			</div>

			<div id="name">
				<%= f.label :name, 'Name:', :class=>'inline betaLabelTextField' %>
				<%= f.text_field :name, :class=>'betaTextField' %>
				<%#= errorImage(@user, :name)%>
			</div>

			<div id="email">
				<%= f.label :email, "Email Address:", :class=>'inline betaLabelTextField' %>
				<%= f.text_field :email, :class=>'betaTextField' %>
				<%#= errorImage(@user, :email)%>
			</div>

			<div id="pass">
				<%= f.label :password, 'Password:', :class=>'inline betaLabelTextField' %>
				<%= f.password_field :password, :class=>'betaTextField' %>
				<%#= errorImage(@user, :password)%>
			</div>

			<div>
				<%= f.label :password_confirmation, "Re-Enter Password:", :class=>'inline betaLabelTextField' %>
				<%=f.password_field :password_confirmation,:class=>'betaTextField'%>
				<%#= errorImage(@user, :password_confirmation)%>
			</div>
             
                             <%= f.label :avatar, "Avatar: " %> <!-- paperclip! -->
                             <%= f.file_field :avatar %>
			<%= f.submit '', :class=>'button floatLeft'%>
		
			<p class="">Already a member? <%=link_to('Sign In here', '/login')%></p>
			<p class=''></p>
		<% end %>
		
		
	</div>
</div>

<div id='leftstuff'>
